@using MVC_VB2.Models
@model Geslacht
@Html.DropDownList("",
    new SelectListItem[]
    {
        new SelectListItem()
        {
            Text="Manelijk",
            Value=Geslacht.Man.ToString(),
            Selected=Model==Geslacht.Man
        },
        new SelectListItem()
        {
            Text="Vrouwelijk",
            Value=Geslacht.Vrouw.ToString(),
            Selected=Model==Geslacht.Vrouw
        }
    }
    )